<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/cardview_default_radius">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iv_lodge_pic"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_alignParentTop="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                card_view:srcCompat="@drawable/cottage"
                tools:ignore="KeyboardInaccessibleWidget" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignBottom="@id/iv_lodge_pic"
                card_view:srcCompat="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_lodge_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="8dp"
                android:layout_alignBottom="@id/iv_lodge_pic"
                android:text="Redneck Lodge" />

            <TextView
                android:id="@+id/tv_lodge_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="8dp"
                android:layout_alignBottom="@id/iv_lodge_pic"
                android:layout_alignEnd="@id/iv_lodge_pic"
                android:text="21 Members" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>